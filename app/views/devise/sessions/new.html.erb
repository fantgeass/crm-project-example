<!DOCTYPE html>
<html lang="ru">
<head>
  <title>СПБЕК: Вход</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="well container" style="width: 400px">
    <h2>Войти как...</h2>
<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
      <%= render 'layouts/messages' %>
  <div class="form-inputs">
    <%= f.input :email, :required => false, :autofocus => true, input_html: {value: 'admin@example.com'} %>
    <%= f.input :password, :required => false, input_html: {value: 'password'} %>
    <%= f.input :remember_me, :as => :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Войти" %>
  </div>
<% end %>
<% # render "devise/shared/links" %>
</div>
</body>
</html>
